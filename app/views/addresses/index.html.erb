<p id="notice"><%= notice %></p>

<h1>Listing Addresses</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Country</th>
      <th>Locality</th>
      <th>Index</th>
      <th>Addres line</th>
      <th>Delete</th>
      <th>Main</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.user %></td>
        <td><%= address.country %></td>
        <td><%= address.locality %></td>
        <td><%= address.index %></td>
        <td><%= address.addres_line %></td>
        <td><%= address.delete %></td>
        <td><%= address.main %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

