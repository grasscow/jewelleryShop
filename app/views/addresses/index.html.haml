%p#notice= notice
%h1 Listing Addresses
%table
  %thead
    %tr
      %th User
      %th Country
      %th Locality
      %th Index
      %th Addres line
      %th Delete
      %th Main
      %th{:colspan => "3"}
  %tbody
    - @addresses.each do |address|
      %tr
        %td= address.user
        %td= address.country
        %td= address.locality
        %td= address.index
        %td= address.addres_line
        %td= address.delete
        %td= address.main
        %td= link_to 'Show', address
        %td= link_to 'Edit', edit_address_path(address)
        %td= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Address', new_address_path
