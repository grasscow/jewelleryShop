%p#notice= notice
%p
  %strong Name:
  = @product.name
%p
  %strong Category:
  = @product.category

%p
  %strong Description:
  = @product.description

-if @product.image?
  = link_to @product.image.url do
    = image_tag @product.image.url(:thumb)
  
%p
  %strong Amount:
  = @product.amount
%p
  %strong Price:
  = @product.price
  
= link_to 'Edit', edit_product_path(@product)
|
= link_to 'Back', products_path
