= form_for(@product, authenticity_token: true, remote: true, multipart: true) do |f|
  = f.hidden_field :category_id
  - if @product.errors.any?
    #error_explanation
      %h2
        = pluralize(@product.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.text_field :name, class: 'form-control', placeholder: 'Наименование'
  .form-group
    = f.text_area :description, class: 'form-control', placeholder: 'Описание'
  .form-group
    .input-group
      .input-group-addon
        = fa_icon 'picture-o'
      = f.file_field :image, class: 'form-control'
  .form-group
    .input-group
      .input-group-addon
        = fa_icon 'times'
      = f.number_field :amount, class: 'form-control', placeholder: 'Кол-во на скалде'
  .form-group
    .input-group
      .input-group-addon
        = fa_icon 'usd'
      = f.text_field :price, class: 'form-control', placeholder: 'Цена'
  .form-group
    = f.submit 'Сохранить товар', class: 'btn btn-primary pull-left'
